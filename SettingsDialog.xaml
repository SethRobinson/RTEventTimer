<Window x:Class="RTEventTimer.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer Settings"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}"
        Width="450"
        Height="600"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Timer Control Section -->
        <GroupBox Grid.Row="0" Header="Timer Control" 
                  Margin="0,0,0,20"
                  Foreground="{StaticResource TextBrush}"
                  BorderBrush="{StaticResource PrimaryBrush}">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Name="PauseButton" 
                        Content="Pause" 
                        Grid.Column="0" 
                        Margin="5"
                        Click="PauseButton_Click"/>
                
                <Button Name="StopButton" 
                        Content="Stop" 
                        Grid.Column="1" 
                        Margin="5"
                        Click="StopButton_Click"/>
                
                <Button Name="RestartButton" 
                        Content="Restart" 
                        Grid.Column="2" 
                        Margin="5"
                        Click="RestartButton_Click"/>
            </Grid>
        </GroupBox>
        
        <!-- Timer Duration Section -->
        <GroupBox Grid.Row="1" Header="Timer Duration" 
                  Margin="0,0,0,20"
                  Foreground="{StaticResource TextBrush}"
                  BorderBrush="{StaticResource PrimaryBrush}">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="Minutes:" 
                       Grid.Column="0" 
                       Foreground="{StaticResource TextBrush}"
                       VerticalAlignment="Center"/>
                <TextBox Name="MinutesTextBox" 
                         Grid.Column="1" 
                         VerticalAlignment="Center"
                         Margin="5,0"/>
                
                <Label Content="Seconds:" 
                       Grid.Column="2" 
                       Foreground="{StaticResource TextBrush}"
                       VerticalAlignment="Center"/>
                <TextBox Name="SecondsTextBox" 
                         Grid.Column="3" 
                         VerticalAlignment="Center"
                         Margin="5,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Status Text Section -->
        <GroupBox Grid.Row="2" Header="Status Messages" 
                  Margin="0,0,0,20"
                  Foreground="{StaticResource TextBrush}"
                  BorderBrush="{StaticResource PrimaryBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Label Content="Active Timer Text:" 
                       Grid.Row="0" 
                       Foreground="{StaticResource TextBrush}"/>
                <TextBox Name="ActiveTextBox" 
                         Grid.Row="1" 
                         Margin="0,5,0,10"/>
                
                <Label Content="Finished Timer Text:" 
                       Grid.Row="2" 
                       Foreground="{StaticResource TextBrush}"/>
                <TextBox Name="FinishedTextBox" 
                         Grid.Row="3" 
                         Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Apply/Close Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Name="ApplyButton" 
                    Content="Apply" 
                    Width="100"
                    Margin="0,0,10,0"
                    Click="ApplyButton_Click"/>
            <Button Name="CloseButton" 
                    Content="Close" 
                    Width="100"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 